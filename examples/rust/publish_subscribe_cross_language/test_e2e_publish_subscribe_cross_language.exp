#### Common Setup

set REPO_ROOT [exec git rev-parse --show-toplevel]
cd ${REPO_ROOT}

source ${REPO_ROOT}/iceoryx2-testing/end-to-end-testing/common.exp

#### Test Setup

set timeout 10

spawn cargo run --example publish_subscribe_cross_language_publisher
set id_publisher $spawn_id

spawn cargo run --example publish_subscribe_cross_language_subscriber

#### Test Assertion

expect_output_from $id_publisher "Send sample*"
expect_output "received: TransmissionData { x: 3, y: 9, funky: 2436.36 }*"

show_test_passed
