#### Common Setup

set REPO_ROOT [exec git rev-parse --show-toplevel]
cd ${REPO_ROOT}

source ${REPO_ROOT}/iceoryx2-testing/end-to-end-testing/common.exp

#### Test Setup

set timeout 10

spawn target/ff/cc/build/examples/c/request_response/example_c_request_response_server
set id_server $spawn_id

spawn cargo run --example request_response_client

#### Test Assertion

expect_output_from $id_server "Server ready to receive requests!"
expect_output "received response 3: *"

show_test_passed
