load("@rules_cc//cc:defs.bzl", "cc_test")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

cc_test(
    name = "iceoryx2-bb-cxx-tests",
    srcs = glob([
        "src/**/*.cpp",
        "src/**/*.hpp",
        "src/**/*.inl",
        ]),
    includes = [
        "src",
        "src/import/testing/include",
    ],
    tags = ["exclusive"],
    visibility = ["//visibility:private"],
    deps = [
        "//iceoryx2-bb/cxx:iceoryx2-bb-cxx",
        "@googletest//:gtest",
    ],
)
