package(default_visibility = ["//visibility:public"])

load("@rules_rust//rust:defs.bzl", "rust_proc_macro")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

rust_proc_macro(
    name = "iceoryx2-bb-testing-nostd-macros",
    srcs = glob(["src/**/*.rs"]),
    crate_features = select({
        "//:cfg_feature_std": [
            "std",
        ],
        "//conditions:default": [],
    }),
    deps = [
        "//iceoryx2-bb/testing-nostd:iceoryx2-bb-testing-nostd",
        "//iceoryx2-pal/print:iceoryx2-pal-print",
        "@crate_index//:proc-macro2",
        "@crate_index//:quote",
        "@crate_index//:syn",
    ],
)
